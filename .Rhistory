# Load required libraries
library(tidyverse)
library(gganimate)
# Create a dataframe with the verbs
verbs <- c("harm", "hurt", "help", "touch", "speak")
df <- tibble(verb = verbs, stringsAsFactors = FALSE)
df
df <- tibble(verb = verbs)
df
# Create a ggplot object
p <- df |>
ggplot(aes(x = 1, y = 1, label = paste("A robot may not", verb))) +
geom_text(size = 20, color = "red", fontface = "bold") +
theme_void()
# Animate the plot
animation <- p +
transition_states(verb, transition_length = 1, state_length = 1) +
enter_fade() +
exit_fade()
# Display the animation
animate(animation)
